{
	"name": "HitCounters",
	"namemsg": "hitcounters-extensionname",
	"version": "0.5.1",
	"author": [
		"[//mwstake.org Mark A. Hershberger]",
		"[//wikimannia.org WikiMANNia]"
	],
	"url": "https://github.com/WikiMANNia/Mediawiki-Extension-HitCounters",
	"descriptionmsg": "hitcounters-desc",
	"type": "variable",
	"license-name": "GPL-3.0-or-later",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"MessagesDirs": {
		"HitCounters": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"HitCountersMagic": "HitCounters.i18n.magic.php",
		"HitCountersAlias": "HitCounters.i18n.alias.php"
	},
	"SpecialPages": {
		"PopularPages": "HitCounters\\SpecialPopularPages"
	},
	"Hooks": {
		"GetMagicVariableIDs": "main",
		"GetPreferences": "main",
		"LoadExtensionSchemaUpdates": "main",
		"PageViewUpdates": "main",
		"ParserFirstCallInit": "main",
		"ParserGetVariableValueSwitch": "main",
		"SkinAddFooterLinks": "main",
		"SpecialStatsAddExtra": "main",
		"AbuseFilter-builder": "main",
		"AbuseFilter-computeVariable": "main",
		"AbuseFilter-deprecatedVariables": "main",
		"AbuseFilter-generateTitleVars": "main"
	},
	"HookHandlers": {
		"main": {
			"class": "HitCounters\\Hooks",
			"services": [
				"MainConfig",
				"UserOptionsLookup"
			]
		}
	},
	"AutoloadClasses": {
		"HitCounters\\DBConnect": "includes/HitCountersDBConnect.php",
		"HitCounters\\Hooks": "includes/HitCounters.hooks.php",
		"HitCounters\\HitCounters": "includes/HitCounters.body.php",
		"HitCounters\\ViewCountUpdate": "includes/ViewCountUpdate.php",
		"HitCounters\\SpecialPopularPages": "includes/SpecialPopularPages.php",
		"HitCounters\\HCUpdater": "includes/HCUpdater.php"
	},
	"config": {
		"HitcounterUpdateFreq": {
			"type": "int",
			"value": 1
		},
		"DisableCounters": {
			"type": "boolean",
			"value": false
		},
		"EnableCountersAtTheFooter": {
			"type": "boolean",
			"value": false
		}
	},
	"manifest_version": 2
}
